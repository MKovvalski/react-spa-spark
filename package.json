{
  "name": "react-spa-spark",
  "version": "1.0.0",
  "description": "A basic react setup allowing to build single page applications",
  "main": "index.js",
  "repository": "https://github.com/MKovvalski/react-spa-spark.git",
  "author": "Mateusz Jakub Kowalski",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf build/*",
    "build": "yarn clean; webpack --config config/webpack.prod.config.js",
    "destroy": "rm -r build",
    "start:dev": "node config/webpack.dev-server.js",
    "start:prod": "yarn build; serve build",
    "lint": "eslint src -c .eslintrc --ext js,jsx",
    "lint:css": "stylelint ./src/**/**/*.shards.js",
    "lint:all": "eslint ./src/**/*.js && stylelint ./src/**/**/*.shards.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-emotion"
    ],
    "setupFiles": [
      "./src/test.config.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.17",
    "@hot-loader/react-dom": "^16.9.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chalk-animation": "^1.6.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-emotion": "^10.0.14",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.17",
    "path": "^0.12.7",
    "serve": "^11.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@emotion/core": "^10.0.21",
    "@emotion/styled": "^10.0.17",
    "emotion": "^10.0.17",
    "emotion-reset": "^2.0.3",
    "emotion-server": "^10.0.17",
    "emotion-theming": "^10.0.19",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.12.13",
    "react-router-dom": "^5.0.1",
    "styled-breakpoints": "^6.9.0"
  }
}
