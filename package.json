{
  "name": "react-spa-spark",
  "version": "1.0.0",
  "description": "A basic react setup allowing to build single page applications",
  "main": "index.js",
  "repository": "https://github.com/MKovvalski/react-spa-spark.git",
  "author": "Mateusz Jakub Kowalski",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf build/*",
    "build": "yarn clean; webpack --config config/webpack.prod.config.js",
    "start:dev": "node config/webpack.dev-server.js",
    "start:prod": "yarn build; serve build",
    "lint": "eslint src -c .eslintrc --ext js,jsx",
    "sass-lint": "sass-lint -v -q",
    "lint:all": "yarn lint; yarn sass-lint",
    "test": "jest"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./src/test.config.js"
    ]
  },
  "devDependencies": {
